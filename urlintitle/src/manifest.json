{
  "manifest_version": 2,
  "name": "URL in title",
  "version": "3.0.1",

  "description": "Reformats the title of each tab according to its URL.",
  "author": "Guillaume Ryder",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "background": {
    "scripts": ["background.js", "punycode.js"]
  },

  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": ["page_hook.js"],
    "run_at": "document_end"
  }],
  "content_security_policy": "default-src 'none'; style-src 'unsafe-inline'; script-src 'self'",

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "chrome_style": true
  },

  "permissions": [
    "storage"
  ]
}
