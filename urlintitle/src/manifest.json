{
  "manifest_version": 3,
  "name": "URL in title",
  "version": "3.0.2",

  "description": "Reformats the title of each tab according to its URL.",
  "author": "Guillaume Ryder",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": ["page_hook.js"],
    "run_at": "document_end"
  }],
  "content_security_policy": {
    "extension_pages": "default-src 'none'; style-src 'unsafe-inline'; script-src 'self'"
  },

  "options_page": "options.html",

  "permissions": [
    "storage"
  ]
}
